<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_second_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LAYOUT_2"
                android:textColor="@color/light_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_change_layout_2_to_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_grey"
                android:text="Change layout"
                android:textColor="@color/light_yellow" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etxt_person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/light_yellow"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_birthdate"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:hint="Date of birth"
        android:paddingLeft="4dp"
        android:paddingBottom="3dp"
        android:textColor="@color/light_yellow"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/underline" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@color/light_grey"
        android:firstDayOfWeek="2" />

    <EditText
        android:id="@+id/etxt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColor="@color/light_yellow"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etxt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone"
        android:inputType="phone"
        android:textColor="@color/light_yellow"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etxt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="login"
        android:inputType="text"
        android:textColor="@color/light_yellow"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@color/light_yellow"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />


</LinearLayout>